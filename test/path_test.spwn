// cargo run build test/path_test.spwn -l --allow filekind --allow readdir --allow fileexists --allow readfile

cwd = @path::new($.cwd())
dirname = @path::new($.dirname())
test = dirname.join('readfiletest.txt')

$.assert(cwd.kind() == "dir")
$.assert(cwd.is_absolute() == true)
$.assert(cwd.readdir().contains("README.md"))
$.assert(dirname.is_relative())
$.assert(dirname.format() == "test")
$.assert(test.kind() == "file")
$.assert(test.exists() == true)
$.assert(test.read() == "hello uwu")

$.print("everything seems correct! ðŸ˜Ž")
